@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h3>@ViewData["Title"]</h3>

<form id="account" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <table>
        <tr>
            <td>Username</td>
            <td>
                <div class="form-floating">
                    <input asp-for="Input.UserName" class="form" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
            </td>
        </tr>
        <tr>
            <td>Password</td>
            <td>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
            </td>
        </tr>
    </table>

    <style>

    #loginForm {
        margin: 0 auto;
        width: 60%; 
        padding: 20px; 
    }

    .form-table tr:not(:last-child) td {
        padding-bottom: 15px;
    }

    #login-submit {
        display: block;
        width: 100%; 
        margin-top: 20px; 
    }
</style>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
