@page
@model ComposeEmailModel
@{
    ViewData["Title"] = "Compose Email";
}
<style>
    body {
        background-color: #9D0000;
    }

    .compose-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 80vh;
    }

    .compose-form {
        max-width: 600px;
        width: 100%;
        padding: 20px;
        border: 1px solid #9D0000;
        border-radius: 8px;
        background-color: #9D0000;
        text-align: left;
    }

        .compose-form label {
            margin-bottom: 5px;
            display: block;
            font-weight: bold;
            color: white;
        }

        .compose-form input[type="email"],
        .compose-form input[type="text"],
        .compose-form textarea {
            width: 100%;
            margin-bottom: 15px;
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            color: black;
        }

        .compose-form button {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            background-color: white;
            color: red;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .compose-form button:hover {
                background-color: #f9f9f9;
                color: red;
            }

    .field-validation-error {
        color: red;
    }
</style>

<div class="compose-container">
    <h1>Sending Email</h1>

    <form class="compose-form" method="post">
        <div>
            <label for="toField">To:</label>
            <input type="text" id="toField" asp-for="Email.ToUserName" required />
            <span asp-validation-for="Email.ToUserName"></span>
        </div>
        <div>
            <label for="subjectField">Subject:</label>
            <input type="text" id="subjectField" asp-for="Email.EmailSubject" required />
            <span asp-validation-for="Email.EmailSubject"></span>
        </div>
        <div>
            <label for="messageField">Message:</label>
            <textarea id="messageField" asp-for="Email.EmailMessage" rows="6" required></textarea>
            <span asp-validation-for="Email.EmailMessage"></span>
        </div>
        <div style="display: flex; justify-content: space-between;">
            <button type="button" onclick="window.history.back();">Back</button>
            <button type="submit">Send Email</button>
        </div>
    </form>
</div>