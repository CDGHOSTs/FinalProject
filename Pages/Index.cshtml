@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<center><img src="images/logo.jpg" width="400" /></center>

<table class="table">
    <thead>
        <tr>
            <th>From</th>
            <th>Subject</th>
            <th>Date/Time</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listEmails)
        {
            <tr>
                <td>
                    @if (item.EmailIsRead.Equals("0"))
                    {
                        <span class="unread-email" style="color: #FFD700;">@item.EmailSender </span>
                    }
                    else
                    {
                        <span>@item.EmailSender</span>
                    }
                </td>
                <td>
                    @if (item.EmailIsRead.Equals("0"))
                    {
                        <span class="unread-email" style="color: #FFD700;">@item.EmailSubject </span>
                    }
                    else
                    {
                        <span>@item.EmailSubject</span>
                    }
                </td>
                <td>
                    @if (item.EmailIsRead.Equals("0"))
                    {
                        <span class="unread-email" style="color: #FFD700;">@item.EmailDate </span>
                    }
                    else
                    {
                        <span>@item.EmailDate</span>
                    }
                </td>
                <td>
                    <a class="btn btn-primary btn-sm btn-light text-danger" href="ReadEmail/@item.EmailID" style="font-weight: bold;">Read</a>
                    <a class="btn btn-primary btn-sm btn-light text-danger delete-email" data-emailid="@item.EmailID" style="font-weight: bold;">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary btn-sm btn-danger text-light" href="/ComposeEmail?username=@User.Identity.Name" style="font-weight: bold;">Compose New Email</a>


@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const deleteButtons = document.querySelectorAll(".delete-email");

            deleteButtons.forEach(button => {
                button.addEventListener("click", function () {
                    const emailId = this.getAttribute("data-emailid");
                    const confirmDelete = confirm("Are you sure you want to delete this email?");

                    if (confirmDelete) {
                        window.location.href = `/Index?handler=DeleteEmail&emailid=${emailId}`;
                    }
                });
            });
        });
    </script>
}